Ejercicio 1
num=float(input('Ingrese el Número:'))
if num%1==0:
    print('Sin decimal')
else:
    print('Con Decimal')

Ejercicio 2
num=float(input('Ingrese el Número:'))
if num//1==num:
    print('Sin decimal')
else:
    print('Con Decimal')

Ejercicio 3
num=float(input('Ingrese el Número:'))
if num==int(num):
    print('Sin decimal')
else:
    print('Con Decimal')


Ejercicio 4
nombre=input('Ingrese el user:')
passwd=input('Ingrese la clave:')
if (nombre=='renato' and passwd=='puce'):
    print('Ingrese al sistema')
else:
    print('No puedes ingresar al sistema')

Ejercicio 5
a=int(input('Ingrese el lado 1:'))
b=int(input('Ingrese el lado 2:'))
c=int(input('Ingrese el lado 3:'))
if a+b>c and a+c>b and b+c>a:
    print("Es triángulo")
else:
    print('No es un triágnulo')

Ejercicio 6
A=int(input('Ingrese A:'))
B=int(input('Ingrese B:'))
C=int(input('Ingrese C:'))
if A>B:
    if A>C:
        mayor=A
    else:
        mayor=C
else:
    if B>C:
        mayor=B
    else:
        mayor=C
print(f'El mayor es {mayor}')


Ejercicio 7
A=int(input('Ingrese A:'))
B=int(input('Ingrese B:'))
C=int(input('Ingrese C:'))
if A>B and A>C:
    mayor=A
if B>A and B>C:
    mayor=B
if C>A and C>B:
    mayor=C
print(f'El mayor es {mayor}')

Ejercicio 8
i=5
while i>0:
    print(f'{i}',end=" ")
    i=i-1
